<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:background="#006400">
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#006400"
    android:orientation="vertical" >
 
    <TextView
		android:id="@+id/tvStatuslbl"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="0.03"
		android:text="Student Details:"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:textColor="@android:color/black" />

	<TextView
		android:id="@+id/tvStatus"
		android:layout_below="@+id/tvStatuslbl"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textColor="@android:color/black"
		android:textAppearance="?android:attr/textAppearanceLarge" />

	<TextView
		android:id="@+id/tvResultlbl"
		android:layout_below="@+id/tvStatus"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Result"
		android:textColor="@android:color/black" 
		android:textAppearance="?android:attr/textAppearanceLarge"
		/>

	<TextView
		android:id="@+id/tvResult"
		android:layout_below="@+id/tvResultlbl"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textColor="@android:color/black"
		android:textAppearance="?android:attr/textAppearanceLarge"/>
	
	
	   
	    <EditText 
	        android:id="@+id/edit_student_no"
	        android:layout_below="@+id/tvResult"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:hint="Enter Student Number"
	        
	        />
	<LinearLayout
	    android:id="@+id/btn_layout"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/edit_student_no"
	    android:layout_weight="100"
	    android:layout_alignParentBottom="true"
	    android:orientation="horizontal">
	 
	    
	  <Button 
        android:id="@+id/btnScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="@drawable/send_button"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:layout_weight="50"
        android:text="Scan"/>
	 
	  <Button 
	      android:id="@+id/btnSearch"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_marginTop="10dip"
	      android:paddingTop="10dip"
          android:paddingBottom="10dip"
          android:layout_gravity="center_horizontal"
	      android:text="Search"
	      android:textColor="@android:color/white"
	      android:background="@drawable/send_button"
	      android:layout_weight="50"
	     />
	  
	</LinearLayout>

</RelativeLayout>
</ScrollView>
